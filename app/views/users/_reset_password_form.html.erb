<% form_for current_user, :url => "/reset_password/" + current_user.id.to_s do %>
  <div>
    <%= label(:ldap_user, :new_password, "New Password") %>
    <%= password_field :ldap_user, :new_password, :class => "reset_password" %>
  </div>
  <div>
    <%= label(:ldap_user, :confirm_password, "Confirm Password") %>
    <%= password_field :ldap_user, :confirm_password, :class => "reset_password"%>
  </div>
  <%= submit_tag "Submit", :id => "reset_password_submit"%>
<% end %>

